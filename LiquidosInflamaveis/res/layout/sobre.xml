<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".sobre" 
    android:orientation="vertical" >
        
      
          <ScrollView
        android:id="@+id/scrollView1"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dip"
        android:fillViewport="false">
        
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
               <!--  apresentação -->
            
         <TextView
        android:id="@+id/apresent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <TextView
			        android:id="@+id/sobresep1"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:background="@drawable/separador" />
        
        <!-- Capitão Wiliam -->
        
         <TextView
        android:id="@+id/capitao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <TextView
			        android:id="@+id/sobresep2"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:background="@drawable/separador" />
        
          <!-- Ze Nilson -->
        
         <TextView
        android:id="@+id/zeNilson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <TextView
			        android:id="@+id/sobresep3"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:background="@drawable/separador" />
        
   
       
     				        
			          <ImageView 
                                android:id="@+id/ufgLogo"
                                android:src="@drawable/f1"
                                android:layout_height="match_parent" 
                                android:layout_width="match_parent" 
                                android:layout_weight="1"
                                android:contentDescription="UFG logo" />
                               <!-- android:adjustViewBounds="true"
                				android:scaleType="fitStart"  -->
                				
                				  <TextView
			        android:id="@+id/sobresep4"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:background="@drawable/separador" />
        
                                
			          
			          <ImageView 
                                android:id="@+id/profmatLogo1"
                                android:src="@drawable/f2"
                                android:layout_height="match_parent" 
                                android:layout_width="match_parent" 
                                android:layout_weight="1"
                                android:contentDescription="Profmat logo" />
                               <!-- android:adjustViewBounds="true"
                				android:scaleType="fitStart"  -->
                				
                				  <TextView
			        android:id="@+id/sobresep5"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:background="@drawable/separador" />
        
				        
			     
			            <ImageView 
                                android:id="@+id/cbmLogo1"
                                android:src="@drawable/f3"
                                android:layout_height="match_parent" 
                                android:layout_width="match_parent" 
                                android:layout_weight="1"
                                android:contentDescription="CBM logo" />
                               <!-- android:adjustViewBounds="true"
                				android:scaleType="fitStart" -->
                                
                                  <TextView
			        android:id="@+id/sobresep6"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:background="@drawable/separador" />
        
			          
			          <ImageView 
                                android:id="@+id/sbmLogo1"
                                android:src="@drawable/f4"
                                android:layout_height="match_parent" 
                                android:layout_width="match_parent" 
                                android:layout_weight="1"
                                android:contentDescription="SBM logo" />
                                <!-- 
                				android:scaleType="fitStart" -->
                				
                				  <TextView
			        android:id="@+id/sobresep7"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:background="@drawable/separador" />
        
			          
			            <ImageView 
                                android:id="@+id/jataitec"
                                android:src="@drawable/jataitec"
                                android:layout_height="match_parent" 
                                android:layout_width="match_parent" 
                                android:layout_weight="0"
                                android:contentDescription="CBM logo" />
                               <!-- android:adjustViewBounds="true"
                				android:scaleType="fitStart" -->
				        
     </LinearLayout>
     </ScrollView>
       
         <Button
                android:id="@+id/sobreHomeButton"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/homeCalc" />
</LinearLayout>
